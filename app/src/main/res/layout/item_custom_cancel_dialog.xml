<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="256dp"
            android:layout_height="138dp">
            <TextView
                android:id="@+id/tv_dialog_title"
                style="@style/body1_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="8sp"
                android:textColor="#151515"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="정말로 취소하실건가요?" />

            <TextView
                android:id="@+id/tv_dialog_message"
                style="@style/detail2_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="6sp"
                android:textColor="#808080"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title"
                tools:text="취소하시면 되돌릴 수 없어요." />


            <TextView
                android:id="@+id/tv_carry_action"
                style="@style/detail2_bold"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/orange400"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_cancel_action"
                app:layout_constraintEnd_toStartOf="@+id/tv_cancel_action"
                tools:text="캐리할게요" />


            <TextView
                android:id="@+id/tv_cancel_action"
                style="@style/detail2_bold"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/gray200"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="취소할게요" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>
